    <td>
      <a class="btn btn-success btn-xs" href="<%= url_for('insert_random_data') %>">insert 300 random entities of each Type</a>
    </td>
  </tr>
  <!-- ROW 3 -->
  <tr>
    <td>
      
    </td>
    <td>

    </td>
    <td>
      <a class="btn btn-danger btn-xs" href="<%= url_for('reset_all') %>" data-toggle="tooltip" data-placement="bottom" title="WARNING: this will delete all users (including pub_admin). System will operate in demo mode.">reset ALL</a>
    </td>
    <td>
      
    </td>
  </tr>  
</table>
