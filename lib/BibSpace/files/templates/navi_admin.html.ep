% use Mojo::ByteStream 'b';

<table>
  <!-- ROW 1 -->
  <tr>
    <td>
      <a class="btn btn-default btn-xs" href="<%= url_for('load_fixture') %>">fixture ==> all (restore backup) </a>
    </td>
    <td>
      <a class="btn btn-default btn-xs" href="<%= url_for('copy_mysql_to_smart') %>">mysql ==> smart</a>
    </td>
    <td>
      <a class="btn btn-danger btn-xs" href="<%= url_for('reset_mysql') %>">reset mysql</a>
    </td>
    <td>
      <a class="btn btn-info btn-xs" href="<%= url_for('persistence_status') %>">status</a>
      <!-- <a class="btn btn-default btn-xs" id="get_persistence_backends_status">ajax status</a> -->
    </td>
  </tr>  
  <!-- ROW 2 -->
  <tr>
    <td>
      <a class="btn btn-default btn-xs" href="<%= url_for('save_fixture') %>">fixture <== smart</a>
    </td>
    <td>
      <a class="btn btn-default btn-xs" href="<%= url_for('copy_smart_to_mysql') %>">mysql <== smart</a>
    </td>
    <td>
      <a class="btn btn-danger btn-xs" href="<%= url_for('reset_smart') %>" data-toggle="tooltip" data-placement="bottom" title="WARNING: this will delete all users (including pub_admin). System will operate in demo mode.">reset smart</a>
